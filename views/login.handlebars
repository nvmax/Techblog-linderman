<section class="login-page">
    <div class="login-container">
        <div class="login-form">
            <h1>Login</h1>
        </div>
        <div class="form-section">
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="username">Email</label>
                    <input type="text" class="entry-field" id="user-login" placeholder="Username" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="entry-field" id="password-login" placeholder="Password" />
                </div>
                <div>
                    <button type="submit" class="btn" id="signup-btn">Login</button>
                </div>
            </form>
        </div>
    </div>
</section>

<script src="/js/login.js"></script>

